<script>
$(document).ready(function(){
  $("#focusedInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#transaction #transactionRow #transactionName").filter(function() {
        $(this).parent().toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

